<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:minHeight="50dp"
                android:background="@color/primary_blue_color"

    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_0"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/iv_imgMenu_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickEvent"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:paddingLeft="@dimen/dim_10"
            android:src="@mipmap/ic_back"/>

        <ImageView
            android:id="@+id/iv_NotificationBadge"
            android:layout_width="@dimen/dim_10"
            android:layout_height="@dimen/dim_10"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/dim_5"

            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        style="@style/textview_16_black"
            android:text="Login"
        android:textSize="@dimen/font_20"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:padding="@dimen/dim_0"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/iv_imgSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_5"
            android:onClick="onClickEvent"
            android:clickable="true"

            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingRight="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_10"
            android:src="@mipmap/ic_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_16_grey"
            android:textColor="@color/white"
            android:id="@+id/btn_addNew"
            android:text="Add New"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dim_20"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dim_10"
            android:visibility="gone"
            android:clickable="true"
            android:onClick="onClickEvent"
            />
