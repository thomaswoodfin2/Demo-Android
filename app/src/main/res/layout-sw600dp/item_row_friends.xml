        android:id="@+id/iv_imgProfile"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/user1"
        android:clickable="true"
        android:onClick="onClickEvent"
        android:layout_centerHorizontal="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/edittextbottom"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dim_20"
    >
        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        <ImageView
            android:id="@+id/iv_imgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_username"
            android:layout_gravity="center"
          />

        <TextView
            android:id="@+id/tv_Name"
            style="@style/textview_16_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="User Name "
          />
        </LinearLayout>

    <!--Email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_email"
        android:layout_marginTop="@dimen/dim_5"
        >
        <ImageView
            android:id="@+id/iv_imgEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_imgName"
            android:layout_gravity="center"
            android:src="@mipmap/ic_email1"
          />

        <TextView
            android:id="@+id/tv_Email"
            style="@style/textview_12_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/friendsgrey"
            android:layout_marginLeft="8dp"
            android:text="User Name "
            android:top="@+id/iv_imgName"
             />

    </LinearLayout>


    <!--Email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_5"
        >
        <ImageView
            android:id="@+id/iv_imgCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_phone"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            style="@style/textview_12_black"
            android:text="+125665446"
           android:layout_gravity="center"
            />
    </LinearLayout>
