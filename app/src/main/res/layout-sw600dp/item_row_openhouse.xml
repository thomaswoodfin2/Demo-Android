<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dim_10"
    android:background="@color/white"
    >

    <!--<ImageView-->
        <!--android:id="@+id/iv_imgProfile"-->
        <!--android:layout_width="105dp"-->
        <!--android:layout_height="105dp"-->
        <!--android:src="@drawable/user1"-->
        <!--/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user1"
        android:clickable="true"
        android:onClick="onClickEvent"
        android:layout_centerHorizontal="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/edittextbottom"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dim_20"
    >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_loaction1"
               android:layout_gravity="center_vertical"
               />
        <TextView
            android:id="@+id/tv_Address"
            style="@style/textview_16_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:maxLines="5"
            android:layout_marginStart="8dp"
            android:text="6789 West northern Avenue,Glendale,AZ,United States "
          />

       </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_10"
        android:gravity="right"

        >

        <Button
            android:id="@+id/bt_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/dim_0"
            android:text="Start"
            android:background="@drawable/green_btn_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="onClickEvent"
            />


        <Button
            android:id="@+id/bt_leads"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/dim_0"
            android:text="Leads"
            android:layout_marginLeft="@dimen/dim_8"
            android:background="@drawable/primary_btn_rounded_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="onClickEvent"
            />
        <Button
            android:id="@+id/bt_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/dim_0"
            android:text="Edit"
            android:layout_marginLeft="@dimen/dim_8"
            android:background="@drawable/grey_btn_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="onClickEvent"
            />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/dim_0"
            android:text="Delete"
            android:layout_marginLeft="@dimen/dim_8"
            android:background="@drawable/red_btn_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="onClickEvent"
            />

        <ImageView
            android:id="@+id/iv_imgLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@mipmap/ic_view"
            android:onClick="onClickEvent"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/iv_imgLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittextbottom"
            android:layout_marginLeft="@dimen/dim_15"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/iv_imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:onClick="onClickEvent"
            android:layout_marginLeft="@dimen/dim_8"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>

</LinearLayout>
        <View
            android:id="@+id/view_Bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/edittextbottom"
            /></LinearLayout>
</layout>