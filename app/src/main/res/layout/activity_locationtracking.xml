<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/item_header" />

        <Button
            android:id="@+id/request_location_updates_button"
            style="@style/primaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/primary_btn_background"
            android:text="Start Tracking "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/remove_location_updates_button"
            style="@style/primaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/primary_btn_background"
            android:text="Stop Tracking"
            android:textColor="@color/white"
            android:visibility="gone" />


        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"
            android:background="@color/white"
            android:elevation="@dimen/dim_5">


            <LinearLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10"

                >

                <!--<ImageView-->
                <!--android:id="@+id/iv_imgProfile"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:src="@drawable/user1"-->
                <!--android:layout_gravity="center"-->
                <!--/>-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_imgProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="onClickEvent"
                    android:src="@drawable/user1"
                    app:civ_border_color="@color/edittextbottom"
                    app:civ_border_width="1dp" />


                <LinearLayout
                    android:id="@+id/ll_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:orientation="vertical">
                    <!--Name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_message"
                            style="@style/textview_14_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginRight="8dp"
                            android:maxLines="5"
                            android:singleLine="false"
                            android:text="Len has pressed panic button" />
                    </LinearLayout>


                    <!--Email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_imgCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_phone1"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_phone"
                            style="@style/textview_12_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="5"
                            android:singleLine="false"
                            android:text="+125665446"
                            android:textColor="@color/notificationmap" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_imgEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_imgName"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_time"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/textview_12_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="5"
                            android:singleLine="false"
                            android:text="May 22,2018 12:20 PM"
                            android:textColor="@color/notificationmap"
                            android:top="@+id/iv_imgName" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/bt_get_direction"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dim_15"
            android:background="@drawable/primary_btn_rounded_background"
            android:clickable="true"
            android:onClick="onClickEvent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_10"
            android:text="Get Directions"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_myLocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/font_16"
            android:background="@drawable/primary_color_cricle"
            android:clickable="true"
            android:onClick="onClickEvent"
            android:padding="@dimen/dim_5"
            android:src="@drawable/ic_my_location"
            android:visibility="gone" />
    </RelativeLayout>
</layout>