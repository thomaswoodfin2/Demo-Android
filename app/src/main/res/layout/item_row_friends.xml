            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_imgProfile"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:src="@drawable/user1"
                app:civ_border_color="@color/edittextbottom"
                app:civ_border_width="1dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:orientation="vertical">
                <!--Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/iv_imgName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_username" />

                    <TextView
                        android:id="@+id/tv_Name"
                        style="@style/textview_16_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center|left"
                        android:text="User Name " />
                </LinearLayout>

                <!--Email-->
                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_imgEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_imgName"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_email1" />

                    <TextView
                        android:id="@+id/tv_Email"
                        style="@style/textview_12_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="User Name "
                        android:textColor="@color/friendsgrey"
                        android:top="@+id/iv_imgName" />

                </LinearLayout>


                <!--Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_imgCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_phone"

                        />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/textview_12_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="+125665446" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStatus"
                        style="@style/textview_12_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dim_5"
                        android:textColor="@color/notificationmap"
                        android:textStyle="bold|italic"
                        tools:text="Received" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/notificationborder"
                    android:visibility="gone" />


