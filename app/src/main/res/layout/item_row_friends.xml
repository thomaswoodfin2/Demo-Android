                <LinearLayout
                    android:id="@+id/ll_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="@dimen/dim_10"
                    android:gravity="right|bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_Locate"
                        style="@style/optionsButton"
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/primary_btn_rounded_background"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:text="Locate"
                        android:textAllCaps="false"
                        android:textSize="@dimen/font_12" />

                    <ImageView
                        android:id="@+id/iv_imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:layout_toLeftOf="@+id/iv_imgLine"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:paddingLeft="@dimen/dim_5"
                        android:paddingTop="@dimen/dim_5"
                        android:paddingRight="@dimen/dim_0"
                        android:src="@mipmap/ic_location"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_imgLine"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:layout_marginTop="@dimen/dim_2"
                        android:layout_toLeftOf="@+id/iv_imgDelete"
                        android:background="@color/edittextbottom"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_imgDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:paddingLeft="@dimen/dim_5"
                        android:paddingTop="@dimen/dim_0"
                        android:paddingRight="@dimen/dim_0"
                        android:src="@mipmap/ic_delete" />

                    <Button
                        android:id="@+id/bt_accept"
                        style="@style/optionsButton"
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:background="@drawable/green_btn_background"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_Bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/edittextbottom" />
    </LinearLayout>
