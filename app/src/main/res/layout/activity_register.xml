                                style="@style/textview_12_grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_toRightOf="@+id/tv_termsOfService"

                                android:paddingLeft="5dp"
                                android:text="@string/str_and"

                                />

                            <TextView
