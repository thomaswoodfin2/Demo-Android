<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dim_20"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:id="@+id/rl_viewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClickEvent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_viewProfile"
                            style="@style/edittext_16_grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:drawableRight="@mipmap/ic_nextarrow"
                            android:imeOptions="actionNext"
                            android:paddingLeft="45dp"
                            android:paddingRight="@dimen/dim_15"
                            android:paddingBottom="@dimen/dim_8"
                            android:text="@string/str_view_profile" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/iv_imgName"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/input_layout_Name"
                        android:layout_marginLeft="@dimen/dim_5"

                        android:layout_marginBottom="@dimen/dim_8"
                        android:src="@mipmap/ic_sel_friends"

                        />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/iv_imgName"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="@dimen/dim_0"
                        android:layout_toRightOf="@+id/iv_imgName"

                        android:background="@color/grey_color" />
                </RelativeLayout>

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/input_layout_Name"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--&gt;-->
                <!--<EditText-->
                <!--android:id="@+id/et_edtName"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--style="@style/edittext_14_grey"-->
                <!--android:imeOptions="actionNext"-->
                <!--android:inputType="text"-->

                <!--android:hint="@string/str_name"/>-->
                <!--</android.support.design.widget.TextInputLayout>-->


                <RelativeLayout
                    android:id="@+id/rl_editPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:clickable="true"
                    android:onClick="onClickEvent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"

                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_editPhone"
                            style="@style/edittext_16_grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:drawableRight="@mipmap/ic_nextarrow"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:paddingLeft="45dp"
                            android:paddingRight="@dimen/dim_15"
                            android:paddingBottom="@dimen/dim_8"
                            android:text="@string/str_edit_phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/iv_imgPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/input_layout_Phone"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:paddingBottom="9dp"

                        android:src="@mipmap/ic_edit_phone"

                        />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/iv_imgPhone"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="@dimen/dim_8"
                        android:layout_toRightOf="@+id/iv_imgPhone"

                        android:background="@color/grey_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_extendSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:clickable="true"
                    android:onClick="onClickEvent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_extendSubscription"
                            style="@style/edittext_16_grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:drawableRight="@mipmap/ic_nextarrow"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:paddingLeft="45dp"
                            android:paddingTop="@dimen/dim_5"
                            android:paddingRight="@dimen/dim_15"
                            android:paddingBottom="@dimen/dim_8" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/iv_imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/input_layout_location"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_10"
                        android:src="@mipmap/ic_subscription" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/iv_imgLocation"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="@dimen/dim_8"
                        android:layout_toRightOf="@+id/iv_imgLocation"

                        android:background="@color/grey_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:background="@drawable/edittext_background_white"
                    android:clickable="true"
                    android:onClick="onClickEvent">

                    <TextView
                        android:id="@+id/tv_changePassword"
                        style="@style/textview_16_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:clickable="false"
                        android:drawableRight="@mipmap/ic_nextarrow"
                        android:paddingRight="@dimen/dim_15"
                        android:text="@string/str_change_password"
                        android:textColorHint="#a7a7a7"></TextView>

                    <ImageView
                        android:id="@+id/iv_imgDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_0"

                        android:src="@mipmap/ic_pass"

                        />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_toRightOf="@+id/iv_imgDate"
                        android:background="@color/grey_color"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:background="@drawable/edittext_background_white"
                    android:clickable="true"
                    android:onClick="onClickEvent">

                    <TextView
                        android:id="@+id/tv_logout"
                        style="@style/textview_16_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:clickable="false"
                        android:drawableRight="@mipmap/ic_nextarrow"
                        android:paddingRight="@dimen/dim_15"
                        android:text="@string/str_logout"
                        android:textColorHint="#a7a7a7"></TextView>

                    <ImageView
                        android:id="@+id/iv_imgTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim_5"

                        android:paddingBottom="@dimen/dim_0"
                        android:src="@mipmap/ic_logout"

                        />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"

                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_toRightOf="@+id/iv_imgTime"
                        android:background="@color/grey_color"

                        />

                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>