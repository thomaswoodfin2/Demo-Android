<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_8"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_8"
        android:background="@color/white"
        android:elevation="@dimen/dim_5">


        <RelativeLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/notificationbackground"
            android:minHeight="80dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_5">

            <!--<ImageView-->
            <!--android:id="@+id/iv_imgProfile"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:src="@drawable/user1"-->
            <!--android:layout_centerVertical="true"-->
            <!--/>-->

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/iv_imgProfile"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/user1"-->
            <!--/>-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_imgProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:src="@drawable/user1"
                app:civ_border_color="@color/edittextbottom"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:id="@+id/ll_notificationData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_15"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/iv_Arrow"
                android:layout_toRightOf="@+id/iv_imgProfile"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:orientation="vertical"
                android:paddingTop="@dimen/dim_0"
                android:paddingRight="@dimen/dim_20">
                <!--Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_message"
                        style="@style/textview_14_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginRight="8dp"
                        android:maxLines="7"
                        android:singleLine="false"
                        android:text="Len has pressed panic button" />
                </LinearLayout>


                <!--Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_imgCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_phone1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/textview_12_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+125665446"
                        android:textColor="@color/notificationphone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_imgEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_imgName"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_time"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/textview_12_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="May 22,2018 12:20 PM"
                        android:textColor="@color/notificationdate"
                        android:textSize="10sp"
                        android:top="@+id/iv_imgName" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_Arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_imgCancel"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dim_5"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:paddingRight="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_10"
                android:src="@mipmap/ic_nextarrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_imgCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:paddingLeft="@dimen/dim_5"
                android:paddingTop="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:paddingBottom="@dimen/dim_0"
                android:src="@mipmap/ic_delete" />

            <TextView
                android:id="@+id/tv_appointmentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ID: 1001"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <!--<ImageView-->
        <!--android:id="@+id/iv_imgCancel"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/cross_icon"-->
        <!--android:clickable="true"-->
        <!--android:paddingTop="@dimen/dim_5"-->
        <!---->
        <!--android:paddingRight="@dimen/dim_5"-->
        <!--android:paddingLeft="@dimen/dim_5"-->
        <!--android:layout_gravity="right|top"-->
        <!--android:onClick="onClickEvent"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--/>-->
    </androidx.cardview.widget.CardView>
</layout>