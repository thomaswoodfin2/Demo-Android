<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <!--<ImageView-->
            <!--android:id="@+id/iv_imgProfile"-->
            <!--android:layout_width="105dp"-->
            <!--android:layout_height="105dp"-->
            <!--android:src="@drawable/user1"-->
            <!--/>-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_imgProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="onClickEvent"
                android:src="@drawable/user1"
                app:civ_border_color="@color/edittextbottom"
                app:civ_border_width="1dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_loaction1" />

                    <TextView
                        android:id="@+id/tv_Address"
                        style="@style/textview_16_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginRight="8dp"

                        android:gravity="center|left"
                        android:maxLines="5"
                        android:text="6789 West northern Avenue,Glendale,AZ,United States " />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_25"
                    android:gravity="right"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:id="@+id/bt_start"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/green_btn_background"
                        android:onClick="onClickEvent"
                        android:padding="@dimen/dim_0"
                        android:text="Start"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/bt_leads"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:background="@drawable/primary_btn_rounded_background"
                        android:onClick="onClickEvent"
                        android:padding="@dimen/dim_0"
                        android:text="Leads"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/bt_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:background="@drawable/grey_btn_background"
                        android:onClick="onClickEvent"
                        android:padding="@dimen/dim_0"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/bt_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:background="@drawable/red_btn_background"
                        android:onClick="onClickEvent"
                        android:padding="@dimen/dim_0"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/iv_imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:src="@mipmap/ic_view"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_imgLine"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:background="@color/edittextbottom"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/iv_imgDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:clickable="true"
                        android:onClick="onClickEvent"
                        android:src="@mipmap/ic_delete"
                        android:visibility="gone" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_Bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/edittextbottom" />
    </LinearLayout>
</layout>