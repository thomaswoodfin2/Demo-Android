<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dim_10"
    android:background="@color/white"
    >

    <!--<ImageView-->
        <!--android:id="@+id/iv_imgProfile"-->
        <!--android:layout_width="105dp"-->
        <!--android:layout_height="105dp"-->
        <!--android:src="@drawable/user1"-->
        <!--/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_imgProfile"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/user1"
        android:clickable="true"
        android:onClick="onClickEvent"
        android:layout_centerHorizontal="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/edittextbottom"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dim_20"
    >
        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        <ImageView
            android:id="@+id/iv_imgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_username"
            android:layout_gravity="center"
          />

        <TextView
            android:id="@+id/tv_Name"
            style="@style/textview_16_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="User Name "
          />
        </LinearLayout>

    <!--Email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_email"
        android:layout_marginTop="@dimen/dim_5"
        >
        <ImageView
            android:id="@+id/iv_imgEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_imgName"
            android:layout_gravity="center"
            android:src="@mipmap/ic_email1"
          />

        <TextView
            android:id="@+id/tv_Email"
            style="@style/textview_12_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/friendsgrey"
            android:layout_marginLeft="8dp"
            android:text="Email"
            android:top="@+id/iv_imgName"
             />

    </LinearLayout>


    <!--Email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_5"
        >
        <ImageView
            android:id="@+id/iv_imgCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_phone"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            style="@style/textview_12_grey"
            android:textColor="@color/friendsgrey"

            android:text="+125665446"
           android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_5"
        >
        <ImageView
            android:id="@+id/iv_imgTime"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/ic_time"

            />

        <TextView
            android:id="@+id/tv_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            style="@style/textview_12_grey"
            android:text="+125665446"
            android:textColor="@color/friendsgrey"

            android:layout_gravity="center"
            />
    </LinearLayout>


    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@color/edittextbottom"
          />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_10"
        android:gravity="right"

        >

        <Button
            android:id="@+id/btn_View"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_30"
            android:layout_marginLeft="@dimen/dim_8"
            android:textSize="@dimen/font_14"
            android:text="View"
            android:layout_gravity="center_vertical"
            android:background="@drawable/primary_btn_rounded_background"
            style="@style/optionsButton"
            android:textAllCaps="false"
            android:onClick="onClickEvent"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/iv_imgLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittextbottom"
            android:layout_marginLeft="@dimen/dim_8"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/iv_imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"
            android:clickable="true"
            android:padding="@dimen/dim_5"
            android:layout_gravity="center_vertical"
            android:onClick="onClickEvent"
            android:layout_marginLeft="@dimen/dim_10"
            />


    </LinearLayout>
</LinearLayout>

</LinearLayout>
        <View
            android:id="@+id/view_Bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/edittextbottom"
            /></LinearLayout>
</layout>