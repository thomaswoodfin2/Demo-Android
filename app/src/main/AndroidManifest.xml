        <!-- </intent-filter> -->
        <!-- </receiver> -->
        <receiver
            android:name=".receivers.ScheduleBroadcastReceiver"
            android:process=":remotealarm" />

        <service
            android:name=".location.LocationUpdatesService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" /> <!-- <service -->
        <!-- android:name=".service.UpdateStatusService" -->
        <!-- android:exported="false" /> -->
        <service
            android:name=".service.SensorService"
            android:exported="false" />

        <receiver android:name=".receivers.PinPointAlarmReceiver" />
    </application>

</manifest>